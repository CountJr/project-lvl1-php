  "require": {
    "nategood/commando": "*",
    "php": ">=7.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.*",
    "squizlabs/php_codesniffer": "*",
    "codeclimate/php-test-reporter": "*"
  },
  "autoload": {
